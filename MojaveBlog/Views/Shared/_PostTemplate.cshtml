
@using MojaveBlog
@model MojaveBlog.Core.Post
 
<div class="post">
    <div class="post-meta">
        <div class="row">

            <!--Heading-->
            <div class="post-title">
                <h2>@Html.PostLink(Model)</h2>
            </div>

        </div>

        <div class="row">

            <!--Category-->
            <div class="post-category">
                <span>Category: </span>@Html.CategoryLink(Model.Category)
            </div>

            <!--Tags-->
            <div class="post-tags">
                <span>Tags:</span>@Helpers.Tags(Html, Model.Tags)
            </div>



            <!--Posted date-->
            <div class="posted-date">
                @Model.DatePost.ToConfigLocalTime()</div>

        </div>

    </div>

    <!--Short Description-->
    <div class="post-body">
        @Html.Raw(Model.ShortDescription)
    </div>

    <div class="post-foot">
        @Html.ActionLink("continue...", "Post", "Mojave",
        new
        {
            year = Model.DatePost.Year,
            month = Model.DatePost.Month,
            day = Model.DatePost.Day,
            title = Model.UrlSlug
        },
        new { title = "подробнее..." }
    )
    </div>
</div>